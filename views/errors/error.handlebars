<div class="text-center py-5">
    <div class="mb-4">
        {{#if (eq error_code 404)}}
            <i class="fas fa-search fa-5x text-muted"></i>
        {{else}}
            <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
        {{/if}}
    </div>
    
    <h1 class="display-1 text-muted">{{error_code}}</h1>
    <h2 class="mb-4">{{error_message}}</h2>
    
    {{#if (eq error_code 404)}}
        <p class="lead text-muted mb-4">The page you're looking for doesn't exist or has been moved.</p>
    {{else}}
        <p class="lead text-muted mb-4">Something went wrong on our end. Please try again later.</p>
    {{/if}}
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a href="/" class="btn btn-success btn-lg me-md-2">
            <i class="fas fa-home me-2"></i>Go Home
        </a>
        <a href="/contact" class="btn btn-outline-success btn-lg">
            <i class="fas fa-envelope me-2"></i>Contact Support
        </a>
    </div>
</div> 