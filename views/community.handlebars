<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-comments text-success me-2"></i>Community Posts
    </h2>
    {{#if user}}
        <a href="/submit" class="btn btn-success">
            <i class="fas fa-plus me-2"></i>New Post
        </a>
    {{/if}}
</div>

<!-- Featured Community Quotes -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card border-success shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-quote-left me-2"></i>Community Voices
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="border-start border-success border-4 ps-3">
                            <blockquote class="mb-2">
                                <p class="mb-2 fst-italic">
                                    "I have also heard of a general interest in and support of paying HIGHER... monthly charges in exchange for the continuation of a highly desirable, but higher cost alley pickup service."
                                </p>
                                <footer class="text-success fw-bold">
                                    <i class="fas fa-user me-1"></i>Larry - University Meadows
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="border-start border-success border-4 ps-3">
                            <blockquote class="mb-2">
                                <p class="mb-2 fst-italic">
                                    "It is just not acceptable to attempt to terminate an existing city service that will adversely affect the lives of tens of thousands of residential property owners without a desirable and practical replacement."
                                </p>
                                <footer class="text-success fw-bold">
                                    <i class="fas fa-user me-1"></i>Larry - University Meadows
                                </footer>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#if posts}}
    <div class="row">
        {{#each posts}}
            <div class="col-12 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">{{title}}</h5>
                            <span class="badge bg-{{#if (eq category 'cleanup')}}success{{else if (eq category 'issue')}}danger{{else if (eq category 'announcement')}}warning{{else}}secondary{{/if}}">
                                {{category}}
                            </span>
                        </div>
                        <p class="card-text">{{content}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-user me-1"></i>{{username}} â€¢ 
                                <i class="fas fa-clock me-1"></i>{{formatDate created_at}}
                            </small>
                            {{#if (eq username ../user.username)}}
                                <small class="text-muted">
                                    <i class="fas fa-user-check me-1"></i>Your post
                                </small>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <div class="text-center py-5">
        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No posts yet</h4>
        <p class="text-muted">Be the first to start a conversation in your community!</p>
        {{#if user}}
            <a href="/submit" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Create First Post
            </a>
        {{else}}
            <a href="/login" class="btn btn-success">
                <i class="fas fa-sign-in-alt me-2"></i>Login to Post
            </a>
        {{/if}}
    </div>
{{/if}} 