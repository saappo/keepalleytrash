<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Newsletter Preview - Keep Alley Trash</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .preview-header {
            background: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 0;
        }
        
        .preview-controls {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: white;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 0;
        }
        
        .newsletter-container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        
        .newsletter-content {
            padding: 2rem;
        }
        
        @media print {
            .preview-header, .preview-controls {
                display: none;
            }
            .newsletter-container {
                box-shadow: none;
            }
        }
    </style>
</head>
<body>
    <!-- Preview Header -->
    <div class="preview-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">Newsletter Preview</h1>
                <div>
                    <a href="/admin/newsletter" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Newsletter Management
                    </a>
                    <a href="/admin/newsletter/pdf" class="btn btn-primary me-2">
                        <i class="fas fa-file-pdf me-2"></i>Download PDF
                    </a>
                    <button onclick="window.print()" class="btn btn-success">
                        <i class="fas fa-print me-2"></i>Print Preview
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Preview Controls -->
    <div class="preview-controls">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="showEmailPreview" checked>
                        <label class="form-check-label" for="showEmailPreview">
                            Show as email preview
                        </label>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        This is how the newsletter will appear to subscribers
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter Content -->
    <div class="container-fluid py-4">
        <div class="newsletter-container">
            {{{newsletterHTML}}}
        </div>
    </div>

    <!-- Footer -->
    <div class="container mt-4 mb-4">
        <div class="text-center">
            <p class="text-muted">
                <small>
                    This is a preview of the newsletter that will be sent to subscribers. 
                    The actual email may appear slightly different depending on the email client.
                </small>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle email preview mode
        document.getElementById('showEmailPreview').addEventListener('change', function() {
            const container = document.querySelector('.newsletter-container');
            if (this.checked) {
                container.style.maxWidth = '800px';
                container.style.margin = '0 auto';
            } else {
                container.style.maxWidth = '100%';
                container.style.margin = '0';
            }
        });
    </script>
</body>
</html> 