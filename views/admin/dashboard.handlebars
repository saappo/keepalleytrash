<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-tachometer-alt text-success me-2"></i>Admin Dashboard
    </h2>
    <a href="/admin/posts" class="btn btn-outline-success">
        <i class="fas fa-list me-2"></i>Manage Posts
    </a>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{users_count}}</h4>
                        <p class="card-text">Total Users</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{posts_count}}</h4>
                        <p class="card-text">Community Posts</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-comments fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{suggestions_count}}</h4>
                        <p class="card-text">Suggestions</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-lightbulb fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="card-title">{{contacts_count}}</h4>
                        <p class="card-text">Contact Messages</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-envelope fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/posts" class="btn btn-outline-success">
                        <i class="fas fa-list me-2"></i>Manage Posts
                    </a>
                    <a href="/admin/newsletter" class="btn btn-outline-primary">
                        <i class="fas fa-newspaper me-2"></i>Newsletter Management
                    </a>
                    <a href="/suggestions" class="btn btn-outline-warning">
                        <i class="fas fa-lightbulb me-2"></i>Review Suggestions
                    </a>
                    <a href="/contact" class="btn btn-outline-info">
                        <i class="fas fa-envelope me-2"></i>View Messages
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <strong>Platform:</strong> Node.js/Express
                    </li>
                    <li class="mb-2">
                        <strong>Database:</strong> SQLite
                    </li>
                    <li class="mb-2">
                        <strong>Environment:</strong> Production
                    </li>
                    <li class="mb-2">
                        <strong>Admin User:</strong> {{user.username}}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div> 